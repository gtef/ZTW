@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Akcja Milicz</h2>
<br>

<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <!--lista1-->
            <div class="col-xs-4">
                <div class="panel panel-default ">

                    <div class="panel-heading">
                        <h3>Przygotowanie</h3>
                    </div>

                    <div class="panel-body">

                        <ul class="list-group">
                            <li class="list-group-item">
                                <h4 class="list-group-item-heading">
                                    Zatankowanie pojazdu
                                    <input type="checkbox" checked="true" style="float:right">
                                </h4>
                                <a href="#" class="list-group-item-text">Wiesio</a>
                                <span class="glyphicon glyphicon-ok"></span>
                            </li>

                            <li class="list-group-item">
                                <h4 class="list-group-item-heading">
                                    Kupno prowiantu
                                    <input type="checkbox" style="float:right">
                                </h4>
                                <a href="#" class="list-group-item-text">Wiesio</a>
                                <a href="#" class="list-group-item-text">Czesław</a>
                                <span class="glyphicon glyphicon-remove"></span>
                            </li>

                            <li class="list-group-item">
                                <h4 class="list-group-item-heading">
                                    Zapakowanie koszyków
                                    <input type="checkbox" style="float:right">
                                </h4>
                                <a href="#" class="list-group-item-text">Zbyszek</a>
                                <span class="glyphicon glyphicon-remove"></span>
                            </li>
                        </ul>

                        <button type="button" class="btn btn-default btn" aria-label="Left Align">
                            <span class="glyphicon glyphicon-plus"></span>Dodaj zadanie
                        </button>

                    </div>
                </div>
            </div>
            <!--lista2-->
            <div class="col-xs-4">
                <div class="panel panel-default ">

                    <div class="panel-heading">
                        <h3>Wyjazd</h3>
                    </div>

                    <div class="panel-body">

                        <ul class="list-group">
                            <li class="list-group-item">
                                <h4 class="list-group-item-heading">
                                    Zabranie pasażera na gapę
                                    <input type="checkbox" style="float:right">
                                </h4>
                                <a href="#" class="list-group-item-text">Wiesio</a>
                                <span class="glyphicon glyphicon-remove"></span>
                            </li>

                            <li class="list-group-item">
                                <h4 class="list-group-item-heading">
                                    Zaparkowanie blisko lasu
                                    <input type="checkbox" style="float:right">
                                </h4>
                                <a href="#" class="list-group-item-text">Wiesio</a>
                                <a href="#" class="list-group-item-text">Czesław</a>
                                <span class="glyphicon glyphicon-remove"></span>
                            </li>

                            <li class="list-group-item">
                                <h4 class="list-group-item-heading">
                                    Zrobienie przerwy na zjedzenie drugiego śniadania
                                    <input type="checkbox" style="float:right">
                                </h4>
                                <a href="#" class="list-group-item-text">Czesław</a>
                                <span class="glyphicon glyphicon-remove"></span>
                            </li>

                            <li class="list-group-item">
                                <h4 class="list-group-item-heading">
                                    Zebranie 5 koszyków
                                    <input type="checkbox" style="float:right">
                                </h4>
                                <a href="#" class="list-group-item-text">Czesław</a>
                                <a href="#" class="list-group-item-text">Wiesio</a>
                                <a href="#" class="list-group-item-text">Zbyszek</a>
                                <span class="glyphicon glyphicon-remove"></span>
                            </li>
                        </ul>

                        <button type="button" class="btn btn-default btn" aria-label="Left Align">
                            <span class="glyphicon glyphicon-plus"></span>Dodaj zadanie
                        </button>

                    </div>
                </div>
            </div>
            <!--lista3-->
            <div class="col-xs-4">
                <div class="panel panel-default ">

                    <div class="panel-heading">
                        <h3>Powrót</h3>
                    </div>

                    <div class="panel-body">

                        <ul class="list-group">
                            <li class="list-group-item">
                                <h4 class="list-group-item-heading">
                                    Podziwianie okazów
                                    <input type="checkbox" checked="true" style="float:right">
                                </h4>
                                <a href="#" class="list-group-item-text">Wiesio</a>
                                <span class="glyphicon glyphicon-ok"></span>
                            </li>

                            <li class="list-group-item">
                                <h4 class="list-group-item-heading">
                                    Zapakowanie koszyków
                                    <input type="checkbox" style="float:right">
                                </h4>
                                <a href="#" class="list-group-item-text">Wiesio</a>
                                <a href="#" class="list-group-item-text">Czesław</a>
                                <span class="glyphicon glyphicon-remove"></span>
                            </li>

                            <li class="list-group-item">
                                <h4 class="list-group-item-heading">
                                    Zapłacenie mandatu za złe parkowanie
                                    <input type="checkbox" style="float:right">
                                </h4>
                                <a href="#" class="list-group-item-text">Czesław</a>
                                <span class="glyphicon glyphicon-remove"></span>
                            </li>
                        </ul>

                        <button type="button" class="btn btn-default btn" aria-label="Left Align">
                            <span class="glyphicon glyphicon-plus"></span>Dodaj zadanie
                        </button>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <button type="button" class="btn btn-default btn-lg" aria-label="Left Align">
        <span class="glyphicon glyphicon-plus"></span>Dodaj listę
    </button>
</div>

<br>

<div class="row">
    <div class="col-xs-3">
        <div class="panel panel-default row">
            <h4> Uczestnicy</h4>
            <div class="list-group">
                @Html.ActionLink("Zbyszek", "zbyszek", "", new { @class = "list-group-item" })
                @Html.ActionLink("Czesław", "#", "", new { @class = "list-group-item" })
                @Html.ActionLink("Wiesio", "#", "", new { @class = "list-group-item" })
            </div>
        </div>
    </div>
</div>